{

  "description": "Add fb custom link icon in addon bar instead of extra bookmark bar",
  "manifest_version": 2,
  "name": "My favour fb shortcut",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "default_icon": {
      "60": "icons/fb_60x60.png"
    }
  },

  "options_ui": {
    "page": "settings/options.html"
  },

  "permissions": ["storage"]

}
